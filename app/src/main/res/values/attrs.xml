<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="strokeWidth" format="dimension"/>
    <attr name="strokeColor" format="color"/>

    <declare-styleable name="MyView">
        <attr name="square_color" format="color"/>
        <attr name="square_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Progress">
        <attr name="text_size" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="RoomTypeView">
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="leftGap" format="dimension"/>
        <attr name="textLeftGap" format="dimension"/>
        <attr name="numberPickerRightGap" format="dimension"/>
        <attr name="counterTextColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="ReviewBarView">

        <attr name="string_start" format="string"/>
        <attr name="string_end" format="string"/>
        <attr name="string_color" format="color"/>
        <attr name="bgColor" format="color"/>
        <attr name="fgColor" format="color"/>
        <attr name="percentage" format="float"/>
        <attr name="margin_left" format="dimension"/>
        <attr name="margin_right" format="dimension"/>
        <attr name="bar_width" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="MessageBox">
        <attr name="text"/>
        <attr name="android:strokeWidth"/>
        <attr name="android:strokeColor"/>
        <attr name="textColor"/>
    </declare-styleable>

    <declare-styleable name="PasswordStrengthBar">
        <attr name="password" format="string" />
        <attr name="cornerRadius" format="dimension"  />
        <attr name="minLength" format="integer"  />
        <attr name="maxLength" format="integer"  />
    </declare-styleable>

</resources>